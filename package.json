{
	"name": "electron-demon",
	"version": "1.0.0",
	"author": "Comingdemon",
	"description": "Electron Frame (include vite2 + vue3 + electron19 + naive-ui2)",
	"scripts": {
		"dev": "concurrently -n=vite,main -c=green,blue \"npm run dev:vite\" \"wait-on -c build/wait.js http-get://localhost:8090 && npm run dev:main\"",
		"build": "npm run build:vite && npm run build:main",
		"dev:main": "node build/development.js",
		"build:main": "cross-env-shell IS_BUILDER=builder node build/production.js && electron-builder --config config/build.js",
		"dev:vite": "vite",
		"build:vite": "vite build"
	},
	"main": "dist/main.js",
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"axios": "^0.27.2",
		"core-js": "^3.22.8",
		"qs": "^6.10.5",
		"vue": "^3.2.37",
		"vue-axios": "^3.4.1",
		"vue-router": "^4.0.16",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.18.2",
		"@babel/plugin-transform-runtime": "^7.18.2",
		"@babel/preset-env": "^7.18.2",
		"@vitejs/plugin-vue": "^2.3.3",
		"babel-loader": "^8.2.5",
		"chalk": "^4.1.2",
		"concurrently": "^7.2.1",
		"copy-webpack-plugin": "^11.0.0",
		"cross-env": "^7.0.3",
		"electron": "^19.0.4",
		"electron-builder": "^23.0.3",
		"electron-log": "^4.4.7",
		"happypack": "^5.0.1",
		"less": "^4.1.3",
		"naive-ui": "^2.30.3",
		"node-loader": "^2.0.0",
		"node-sass": "^7.0.1",
		"ora": "^5.4.1",
		"rimraf": "^3.0.2",
		"sass": "^1.52.3",
		"sass-loader": "^13.0.0",
		"stylus": "^0.58.1",
		"vite": "^2.9.12",
		"vite-plugin-commonjs-externals": "^0.1.1",
		"vite-plugin-html": "^3.2.0",
		"vite-plugin-restart": "^0.1.1",
		"wait-on": "^6.0.1",
		"webpack": "^5.73.0"
	}
}
